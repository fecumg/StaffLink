<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/component_layer_shadow"/>
            <item android:bottom="2dp"
                android:left="2dp"
                android:drawable="@drawable/component_layer_foundation_released_warning"/>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="1dp"
                android:left="1dp"
                android:drawable="@drawable/component_layer_foundation_pressed_warning"/>
        </layer-list>
    </item>
</selector>