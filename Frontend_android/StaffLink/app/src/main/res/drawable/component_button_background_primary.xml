<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/component_layer_shadow"/>
            <item android:bottom="3dp"
                android:left="3dp"
                android:drawable="@drawable/component_layer_foundation_released_primary"/>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="1.5dp"
                android:left="1.5dp"
                android:drawable="@drawable/component_layer_foundation_pressed_primary"/>
        </layer-list>
    </item>
</selector>