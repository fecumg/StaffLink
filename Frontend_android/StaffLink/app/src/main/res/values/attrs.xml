<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomButtonComponent">
        <attr name="android:text"/>
        <attr name="android:background"/>
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="android:foreground"/>
        <attr name="android:foregroundTint"/>
    </declare-styleable>
    
    <declare-styleable name="CustomInputTextComponent">
        <attr name="android:hint"/>
        <attr name="android:text"/>
        <attr name="android:textColor"/>
        <attr name="startIconDrawable"/>
        <attr name="color" format="color"/>
        <attr name="android:maxLength" />
        <attr name="android:inputType"/>
        <attr name="error" format="string"/>
        <attr name="android:enabled"/>
    </declare-styleable>
    
    <declare-styleable name="CustomImageComponent">
        <attr name="android:src"/>
        <attr name="hasShadow" format="boolean"/>
        <attr name="url" format="string"/>
        <attr name="ableToPickImage" format="boolean"/>
        <attr name="tint" />
        <attr name="cancellable" format="boolean"/>
        <attr name="index" format="integer"/>
        <attr name="cameraAccessible" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomTableComponent">
        <attr name="imageShape" format="enum">
            <enum name="oval" value="0"/>
            <enum name="rectangle" value="1"/>
        </attr>
        <attr name="defaultImage" format="reference"/>
        <attr name="defaultImageTint" format="color"/>
    </declare-styleable>

    <declare-styleable name="CustomSelectComponent">
        <attr name="nullable" format="boolean"/>
        <attr name="nullValue" format="string"/>
        <attr name="android:enabled"/>
    </declare-styleable>

    <declare-styleable name="CustomListComponent">
        <attr name="itemMaxLines" format="integer"/>
        <attr name="itemHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CustomSelectedListComponent">
        <attr name="removable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomFilePickerComponent">
        <attr name="deletable" format="boolean"/>
        <attr name="downloadable" format="boolean"/>
        <attr name="ableToPickFile" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomCheckBoxComponent">
        <attr name="buttonDrawable" format="reference"/>
        <attr name="android:textSize"/>
        <attr name="ableToRemoveItems" format="boolean"/>
        <attr name="ableToChangePositions" format="boolean"/>
        <attr name="hasBottomLine" format="boolean"/>
        <attr name="enabled" format="boolean"/>
    </declare-styleable>
</resources>