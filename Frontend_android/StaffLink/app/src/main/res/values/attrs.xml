<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomButtonComponent">
        <attr name="android:text"/>
        <attr name="android:background"/>
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
    </declare-styleable>
    <declare-styleable name="CustomInputTextComponent">
        <attr name="android:hint"/>
        <attr name="android:text"/>
        <attr name="android:textColor"/>
        <attr name="startIconDrawable"/>
        <attr name="color" format="color"/>
        <attr name="android:maxLength"/>
    </declare-styleable>
    <declare-styleable name="CustomImageComponent">
        <attr name="android:src"/>
        <attr name="shape" format="enum">
            <enum name="circle" value="0"/>
            <enum name="rectangle" value="1"/>
        </attr>
        <attr name="hasShadow" format="boolean"/>
        <attr name="url" format="string"/>
        <attr name="ableToPickImage" format="boolean"/>
    </declare-styleable>
</resources>