<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="oval">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/oval_corner_size</item>
    </style>
    <style name="rectangle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/rectangle_corner_size</item>
    </style>
    <style name="inputTextTheme">
        <item name="colorControlNormal">@color/dark</item>
        <item name="colorControlActivated">@color/dark</item>
        <item name="colorControlHighlight">@color/dark</item>
    </style>

    <style name="defaultSwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color -->
        <item name="colorControlActivated">@color/primary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/transparent_shadow_60</item>

        <!-- inactive track color -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="progressBarSuccess" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/success</item>
    </style>
    <style name="progressBarWarning" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/warning</item>
    </style>
    <style name="progressBarDanger" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/danger</item>
    </style>
    <style name="progressBarPrimary" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/primary</item>
    </style>
    <style name="progressBarDark" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/dark</item>
    </style>
</resources>