<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fpt.edu.stafflink.components.CustomButtonComponent
        android:id="@+id/customButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/component_button_background_danger"/>

    <fpt.edu.stafflink.components.CustomInputTextComponent
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="hint"
        app:color="@color/danger"
        android:textColor="@color/danger"
        app:startIconDrawable="@drawable/ic_person_light_foreground"/>

    <fpt.edu.stafflink.components.CustomInputTextComponent
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textVisiblePassword|textNoSuggestions"/>

    <fpt.edu.stafflink.components.CustomImageComponent
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:ableToPickImage="true"
        android:src="@drawable/bike"/>
</LinearLayout>