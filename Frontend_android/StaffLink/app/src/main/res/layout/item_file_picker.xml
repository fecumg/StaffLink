<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/file_picker_item_width"
    android:layout_height="@dimen/file_picker_item_height"
    android:gravity="center_vertical"
    android:id="@+id/itemFilePickerLayout">

    <TextView
        android:id="@+id/itemFilePickerMainElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/itemFilePickerProgressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="invisible"/>
</RelativeLayout>