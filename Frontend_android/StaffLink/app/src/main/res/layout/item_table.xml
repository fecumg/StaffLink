            <fpt.edu.stafflink.components.CustomImageComponent
                android:layout_width="@dimen/table_item_image_size"
                android:layout_height="@dimen/table_item_image_size"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

            <fpt.edu.stafflink.components.CustomImageComponentOval
                android:layout_width="@dimen/table_item_image_size"
                android:layout_height="@dimen/table_item_image_size"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/table_border_color"
                android:layout_alignParentEnd="true"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/itemTableElementWrapper_three"
